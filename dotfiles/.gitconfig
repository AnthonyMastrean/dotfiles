[core]
  editor        = notepad
  pager         = less -r
  excludesfile  = ~/.gitignore
[user]
  name          = Anthony Mastrean
  email         = anthony.mastrean@gmail.com
[help]
  autocorrect   = 1
[commit]
  verbose       = true
[diff]
  algorithm     = patience
  tool          = diffmerge
[difftool]
  prompt        = false
[mergetool]
  prompt        = false
[alias]
  edit          = commit --amend
  pretty        = log --decorate --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  prune         = fetch --prune
  purge         = clean --force -xd
  standup       = log --author 'Anthony Mastrean' --color --decorate --oneline --since yesterday
  stash-all     = stash save --include-untracked
  stat          = status --short --branch
  undo          = reset --soft HEAD^
  unstage       = reset HEAD
  wdiff         = diff --word-diff --patience
[push]
  default       = simple
[pull]
  rebase        = true
[difftool "diffmerge"]
  cmd           = "sgdm.exe \"$LOCAL\" \"$REMOTE\""
[merge]
  ff            = only
  tool          = diffmerge
[mergetool "diffmerge"]
  trustExitCode = true
  cmd           = "sgdm.exe --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\""
